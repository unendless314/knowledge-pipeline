# Knowledge Pipeline 主題分類設定
# 來源: youtube_transcriber/channels.yaml - 1:1 完美映射

version: "1.0"

# 主題定義 - 完全對應 channels.yaml 的 categories
topics:
  # 1. Crypto 加密貨幣 (3 個頻道)
  crypto:
    name: "Crypto"
    description: "加密貨幣分析"
    notebook: "Crypto Analysis"
    prompt_template: "crypto_tech"
    channels:
      - "Benjamin_Cowen"
      - "Coin_Bureau"
      - "Bankless"

  # 2. Macro Finance 宏觀金融 (4 個頻道)
  macro_finance:
    name: "Macro Finance"
    description: "宏觀金融、貴金屬、外匯"
    notebook: "Macro-Finance"
    prompt_template: "macro_finance"
    channels:
      - "Just_Dario"
      - "Trade_Talk"
      - "Conquer_Trading_Investing"
      - "Real_Vision"

  # 3. Spiritual Growth 靈性成長 (5 個頻道)
  spiritual_growth:
    name: "Spiritual Growth"
    description: "靈性成長、能量更新"
    notebook: "Spiritual-Growth"
    prompt_template: "spiritual"
    channels:
      - "Your_Monk_Haku"
      - "Paul_Selig"
      - "Lee_Harris_Energy"
      - "Eckhart_Tolle"
      - "Christina_Lopes"

  # 4. Remote Viewing 遙視預測 (4 個頻道)
  remote_viewing:
    name: "Remote Viewing"
    description: "遙視預測"
    notebook: "Remote-Viewing"
    prompt_template: "remote_viewing"
    channels:
      - "Future_Forecasting_Group"
      - "Future_Forecasters"
      - "Farsight"
      - "Screaming_Into_The_Night"

  # 5. UFO 神秘學與 UFO (5 個頻道)
  ufo:
    name: "UFO Phenomena"
    description: "UFO 現象（官方揭秘、目擊故事、哲學反思）"
    notebook: "UFO-Research"
    prompt_template: "ufo_research"
    channels:
      - "Richard_Dolan_Intelligent_Disclosure"
      - "The_Good_Trouble_Show"
      - "Ross_Coulthart"
      - "Sol_Foundation"
      - "Ashton_Forbes"

  # 6. Tech Career 職涯與技術 (3 個頻道)
  tech_career:
    name: "Tech Career"
    description: "職涯發展、技術趨勢"
    notebook: "Tech-Career"
    prompt_template: "tech_career"
    channels:
      - "Asian_Dad_Energy"
      - "Jeff_Su"
      - "The_Primeagen"

  # 7. Unknown 無法歸類 (所有頻道都可能 fallback 到這裡)
  unknown:
    name: "Unclassified"
    description: "無法歸類的影片"
    notebook: "Unclassified"
    prompt_template: "default"
    channels: []

